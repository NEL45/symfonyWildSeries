{% extends "base.html.twig" %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories des séries: </h1>
    {% for category in categories %}
        <div>
            <h2>{{ category.id }} / {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name}) }}">Voir toutes les séries</a>
            </div>
    {% else %}
        Aucune categories trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>       
{% endblock %}
